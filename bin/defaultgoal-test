#!/bin/bash

set -aeu
source _shellflags

case "$TESTCONFIG" in
    /*) true ;;
    *) TESTCONFIG="$(pwd)/$TESTCONFIG"
esac
checktestconfig || exit 1

DEFAULTGOAL=unittest
if [ "${TESTSUITE_TESTS-none}" != "none" ]; then
    DEFAULTGOAL=testsuite
fi

E=0
TESTCONFIG="$TESTCONFIG" GOAL="test" "$DEFAULTGOAL" || E=$?

exit $E